{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["react", "react-dom", "react/canary", "react-dom/canary", "react/experimental", "react-dom/experimental"],

    "paths": {
      "@/test-helpers/*": ["./test-helpers/*"],
      "@/util/*": ["./util/*"],
      "@/examples/*": ["./examples/*"]
    }
  }
}
